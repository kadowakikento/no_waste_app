<h1 class="text-center">買い物リスト</h1>
<br>
<div class="text-center">
  <%= link_to 'リスト追加', new_shopping_list_path, class: "btn btn-primary" %>
</div>
<br>
<table class="table table-hover table-bordered">
  <thead class="table-info">
    <tr>
      <th><div class="text-center">商品</th></div>
      <th><div class="text-center">備考</th></div>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_lists.each do |shopping_list| %>
      <tr>
        <td><div class="text-center"><%= shopping_list.title %></td></div>
        <td><div class="text-center"><%= shopping_list.content %></td></div>
        <td><div class="text-center"><%= link_to '詳細', shopping_list,class: "btn btn-secondary" %></td>
        <td><div class="text-center"><%= link_to '編集', edit_shopping_list_path(shopping_list), class: "btn btn-success" %></td></div>
        <td><div class="text-center"><%= link_to '削除', shopping_list, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>