<h1>買い物リスト</h1>

<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_lists.each do |shopping_list| %>
      <tr>
        <td><%= shopping_list.title %></td>
        <td><%= shopping_list.content %></td>
        <td><%= link_to '詳細', shopping_list %></td>
        <td><%= link_to '編集', edit_shopping_list_path(shopping_list) %></td>
        <td><%= link_to '削除', shopping_list, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'リスト追加', new_shopping_list_path %>