<h1>Foods</h1>

<h3>商品名キーワード検索</h3>
<%= search_form_for @q, url: search_foods_path do |f| %>
  <%= f.search_field :name_cont %>
  <%= f.submit '検索' %>
<% end %>
<br><hr>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>Due time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.due_time.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food', new_food_path %>
<br>
<br>
<%= month_calendar(attribute: :due_time, events: @foods) do |date, foods| %>
  <%= date.day %>
  <% foods.each do |food| %>
    <div>
      <%= food.name %>
    </div>
  <% end %>
<% end %>